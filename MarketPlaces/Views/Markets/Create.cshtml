@model MarketPlaces.ViewModels.MarketFormViewModel
@{
    ViewBag.Title = "Add a Market";
}

<h2>Create</h2>
<form>
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => Model.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => Model.Venue, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => Model.Date, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => Model.Time, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Category)
        @Html.DropDownListFor(m => Model.Category, new SelectList(Model.Categories, "Id", "Name","", new { @class = "form-control" }))
        
        <button type="submit"  class="btn btn-primary">Save</button>
    </div>
</form>
