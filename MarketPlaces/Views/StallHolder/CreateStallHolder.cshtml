@model MarketPlaces.ViewModels.StallHolderFormViewModel
@{
    ViewBag.Title = "CreateStallHolder";
}

<h2>Register a Stall</h2>

@using (Html.BeginForm("CreateStallHolder", "StallHolder"))
{
    <p class="alert alert-info">All fields are <strong>required</strong>.</p>
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(s => s.Name)
        @Html.TextBoxFor(s => s.Name, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(s => s.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(s => s.Product)
        @Html.TextBoxFor(s => s.Product, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Product)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Stallholder)
        @Html.TextBoxFor(s => s.Stallholder, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Stallholder)
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
}
@* This needs to come here to make sure that the jqueryval bundle comes after the jquery definition - prevents a request to the server *@
@section scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
}